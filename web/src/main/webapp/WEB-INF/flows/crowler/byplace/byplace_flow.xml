<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.springframework.org/schema/webflow http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd">

    <var name="entityController" class="controller.crowler.CrowlByPlaceController"/>
    <view-state id="home" view="/WEB-INF/flows/crowler/byplace/index.xhtml">
        <on-entry>
            <evaluate expression="entityController.initView()"/>
        </on-entry>

        <transition on="getData" >
            <evaluate expression="entityController.crowlData"/>
        </transition>
    </view-state>
</flow>